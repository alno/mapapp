# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'pg'

gem 'yajl-ruby'

gem 'haml-rails'

gem 'unicorn' # Use unicorn as the app server
gem 'capistrano' # Deploy with Capistrano
gem 'whenever' # Cron tasks

