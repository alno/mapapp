.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid

      %form#search_form.navbar-search.pull-left{ :action => "/" }
        .search-label= t "search.label"
        %input.search-query{ :type => "text", :placeholder => "Search", :name => "q", :value => params[:q] }

      #style_switch.btn-group.pull-right{ 'data-toggle' => 'buttons-radio' }
        - Mapapp.config['map']['styles'].each do |style|
          %button.btn{ 'data-style' => style }= t "map.styles.#{style}"

      %ul.nav
        %li.divider-vertical
        %li= page_link :about
        %li= page_link :credits
