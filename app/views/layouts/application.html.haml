!!!5
%html
  = render 'layouts/header'

  :javascript
    window.metadata = #{render 'layouts/metadata.json.rabl'}
    I18n.defaultLocale = #{ I18n.default_locale.to_json }
    I18n.locale = #{ I18n.locale.to_json }

  %body
    = render 'layouts/navbar'

    #content.map
      = yield

    #sidebar_handle
      %div
        %a.icon-chevron-right

    #sidebar{ :style => "left: -400px" }
      %a.close Ã—

      %ul.nav.nav-tabs
        %li.active= link_to t("sidebar.tabs.search"), "#sidebar_search", 'data-toggle' => 'tab', 'id' => 'sidebar_search_tab'
        %li= link_to t("sidebar.tabs.categories"), "#sidebar_categories", 'data-toggle' => 'tab', 'id' => 'sidebar_categories_tab'

      .tab-content
        #sidebar_search.tab-pane.active
          %h3= t "search.no_query"

          .results

          .pagination
        #sidebar_categories.tab-pane
          %h3= t "categories.header"

          = render 'layouts/categories', :categories => Category.arrange
